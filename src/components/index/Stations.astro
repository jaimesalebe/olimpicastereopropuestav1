---
import stations from "../../config/stations.json";
---

<section
        class="grid grid-cols-2 gap-4 mx-auto container md:grid-cols-3 lg:grid-cols-6 lg:gap-4 place-items-stretch p-4 "
    >
        {
            stations.map((station) => (
                <div
                    class={
                        station.isActive
                            ? "hover:scale-105 hover:transition-all"
                            : "pointer-events-none"
                    }
                >
                    <a href={station.isActive ? station.url : "#"}>
                        <div
                            class={`px-10 py-2 md:px-12 md:py-7 rounded-md h-full flex shadow ${
                                station.isActive
                                    ? "bg-green-500"
                                    : "filter bg-red-600 brightness-50"
                            } flex flex-col items-center justify-between`}
                        >
                            <img
                                src={station.image}
                                alt={station.name}
                                width="0"
                                height="0"
                                class="mx-auto img-fluid select-none object-contain w-20 md:w-full"
                            />
                            <h3 class="text-lg font-bold text-white">
                                {station.isActive ? "On air" : "Off air"}
                            </h3>
                        </div>
                    </a>
                </div>
            ))
        }
    </section>
